    block client
      form(id="client" action=`/fruitjuice/clientupdate/${id}` method="post")
        .d-flex.flex-column
          .form-col
            .form-group.col-md-3
              label(for='prenom') Prenom
              input#inputPrenom.form-control(type='text', name="prenom", value=" ", placeholder="prenom")
            .form-group.col-md-3
                label(for='nom') Nom
                input#inputNom.form-control(type='text', name="nom", value=" ", placeholder=`nom`)
            .form-group.col-md-3
                label(for='adresse') adresse
                input#inputAdresse.form-control(type='text',name="adresse", value=" ",  placeholder=`adresse`)

        button.btn.btn-primary(type='submit', value="modifier") valider

        