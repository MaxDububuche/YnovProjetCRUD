html
  head
    title MyClients
    //- link(rel='stylesheet', href='/css/bootstrap.min.css')

    //- navbar
    ul.nav.nav-pills.nav-fill
      li.nav-item
        a.nav-link(href='http://localhost:3000/fruitjuice/home') Home
      li.nav-item
        a.nav-link.active(href='http://localhost:3000/fruitjuice/clients') Clients
      li.nav-item
        a.nav-link(href='http://localhost:3000/fruitjuice/produits') Produits
      li.nav-item
        a.nav-link(href='http://localhost:3000/fruitjuice/factures') Factures

    //- background and tab
    .card.bg-dark.text-white
      img.card-img(src='../../public/images/fruitjuice_background.jpg', alt='background')
      .card-img-overlay.col.col-lg-8.offset-lg-2
        //- searching by id
        form(method='POST', action=`/fruitjuice/clientfindall`)

        table.table.table-striped.table-dark
          thead
            tr
              th(scope='col') #
              th(scope='col') Prenom
              th(scope='col') Nom
              th(scope='col') Adresse
              th(scope='col') Date de creation
              th
              th
                button.btn.btn-primary(type = 'button'  onclick=`window.location.href='http://localhost:3000/fruitjuice/client/add'`) +


          //- all clients
          tbody
          each client in clients
            tr
              th(scope='row')= client.id
              td= client.prenom
              td= client.nom
              td= client.adresse
              //- td= client.datecreation.toLocaleString("fr-FR")
              
              td
                form(method='POST', action=`/fruitjuice/clientdelete/${client._id}`)
                  button.btn.btn-danger(type='submit') DELETE
              td
                button.btn.btn-info(type = 'button'  onclick=`window.location.href='http://localhost:3000/fruitjuice/client/edit/${client._id}'`) EDIT
