html
  head

    //- Required meta tags
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')

    //- Bootstrap CSS
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css', integrity='sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk', crossorigin='anonymous')
    link(rel='stylesheet', href='../../public/css/style.css')
    link(href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")

    title MyClients
    
  body
    //- navbar
    ul.nav.nav-pills.nav-fill
      li.nav-item
        a.nav-link(href='http://localhost:3000/fruitjuice/home') Home
      li.nav-item
        a.nav-link(href='http://localhost:3000/fruitjuice/clients') Clients
      li.nav-item
        a.nav-link.active(href='http://localhost:3000/fruitjuice/produits') Produits
      li.nav-item
        a.nav-link(href='http://localhost:3000/fruitjuice/factures') Factures

    //- background and tab
    .card.bg-dark.text-white
      img.card-img(src='../../public/images/fruitjuice_background.jpg', alt='background')
      .card-img-overlay.col.col-lg-8.offset-lg-2
        //- searching by id
        form(method='POST', action=`/fruitjuice/produitfindall`)

        table.table.table-striped.table-dark
          thead
            tr
              th(scope='col') #
              th(scope='col') Nom
              th(scope='col') Stock
              th(scope='col') Photo
              th(scope='col') Prix
              th(scope='col') Reference
              th
              th
                button.btn.btn-primary(type = 'button'  onclick=`window.location.href='http://localhost:3000/fruitjuice/produit/add'`) +


          //- all produits
          tbody
          each produit in produits
            tr
              th(scope='row')= produit.id
              td= produit.nom
              td= produit.stock
              td= produit.photo
              td= produit.prix
              td= produit.reference
              //- td= produit.datecreation.toLocaleString("fr-FR")
              
              td
                form(method='POST', action=`/fruitjuice/produitdelete/${produit._id}`)
                  button.btn.btn-danger(type='submit') DELETE
              td
                button.btn.btn-info(type = 'button'  onclick=`window.location.href='http://localhost:3000/fruitjuice/produit/edit/${produit._id}'`) EDIT
